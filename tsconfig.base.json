{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* THE CRUCIAL ADDITION FOR MONOREPOS */
    "baseUrl": ".",
    "paths": {
      "@keyless-translate/core": ["packages/core/src"],
      "@keyless-translate/react": ["packages/react/src"]
    }
  }
}